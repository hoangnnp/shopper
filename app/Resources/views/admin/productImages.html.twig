{% extends 'admin/layoutadmin.html.twig' %}
{% block admin %}
    <div class="content-wrapper">
        <section class="content-header">
            <div class="row">
                <div class="col-xs-12">
                    <div class="box">
                        <div class="box-header">
                            <h3 class="box-title">Add Image</h3>
                        </div>
                        <div class="box-body table-responsive no-padding">
                            <table class="table table-hover">
                                <tr>
                                    <th>Image</th>
                                    <th>Action</th>
                                </tr>
                                {% for image in images %}
                                    <tr>
                                        <td><img style="width: 60px; height: 60px;" src="{{ image.url }}" alt="User Image"></td>
                                        <td>
                                            <a class="btn btn-danger" href="{{ url('deleteimage',{'pid':pid,'id':image.id}) }}">Delete</a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </table>
                        </div>
                        <div class="box-footer">
                            {{ form_start(form) }}
                            {{ form_widget(form) }}
                            <button type="submit" style="margin-top: 5px;" class="btn btn-success">Add</button>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>

{% endblock %}