{% extends 'admin/layoutadmin.html.twig' %}
{% block admin %}
    <div class="content-wrapper">
        <section class="content-header">
            <div class="row">
                <div class="col-xs-12">
                    <div class="box">
                        <div class="box-header">
                            <h3 class="box-title">List Product</h3>
                        </div>
                        <div class="box-body table-responsive no-padding">
                            <table class="table table-hover">
                                <tr>
                                    <th>Name</th>
                                    <th>Price</th>
                                    <th>Condition</th>
                                    <th>Availability</th>
                                    <th>Brand</th>
                                    <th>Category</th>
                                    <th>Image</th>
                                    <th>Action</th>
                                </tr>
                                {% for product in products %}
                                    <tr>
                                        <td>{{ product.name }}</td>
                                        <td>${{ product.price }}</td>
                                        <td>{{ product.state}}</td>
                                        <td>{{ product.status}}</td>
                                        <td>{{ product.brand.name}}</td>
                                        <td>{{ product.category.name }}</td>
                                        <td>    <a class="btn btn-success" href="{{ url('viewimages',{'id':product.id}) }}">Images</a></td>
                                        <td>
                                            <a class="btn btn-success" href="{{ url('editproduct',{'id':product.id}) }}">Edit</a>
                                            <a class="btn btn-danger" href="{{ url('deletepage',{'id':product.id}) }}">Delete</a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </table>
                        </div>
                            <div class="box-footer">
                                <a href="{{ url('createproductpage') }}" class="btn btn-success">Create</a>
                            </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}


