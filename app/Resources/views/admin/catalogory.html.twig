{% extends "admin/layoutadmin.html.twig" %}
{% block admin %}
    <div class="content-wrapper">
        <section class="content-header">
            <div class="row">
                <div class="col-xs-12">
                    <div class="box">
                        <div class="box-header">
                            <h3 class="box-title">List Categories</h3>
                        </div>
                        <div class="box-body table-responsive no-padding">
                            <table class="table table-hover">
                                <tr>
                                    <th>Id</th>
                                    <th>Name</th>
                                    <th>Action</th>
                                </tr>
                                {% for category in cates %}
                                    <tr>
                                        <td>{{ category.id }}</td>
                                        <td>{{ category.name }}</td>
                                        <td>
                                            <a class="btn btn-success" href="{{ url('editcategory',{'id':category.id}) }}">Edit</a>
                                            <a class="btn btn-danger" href="{{ url('deletecatepage',{'id':category.id}) }}">Delete</a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </table>
                        </div>
                        <div class="box-footer">
                            <a href="{{ url('createcategoriespage') }}" class="btn btn-success">Create</a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}