{% extends 'default/layout.html.twig' %}
{% block content %}
    <div class="header-bottom"><!--header-bottom-->
        <div class="container">
            <div class="row">
                <div class="col-sm-9">
                    <div class="mainmenu pull-left">
                        <ul class="nav navbar-nav collapse navbar-collapse">
                            <li><a href="{{ url('homepage') }}" class="active">Home</a></li>
                            <li class="dropdown"><a href="#">Categories<i class="fa fa-angle-down"></i></a>
                                <ul role="menu" class="sub-menu">
                                    {% for cate in cates %}
                                        <li><a href="{{ url('categoryproduct',{'id':cate.id}) }} ">{{ cate.name }}</a></li>
                                    {% endfor %}
                                </ul>
                            </li>
                            <li class="dropdown"><a href="#">Brand<i class="fa fa-angle-down"></i></a>
                                <ul role="menu" class="sub-menu">
                                    {% for brand in brands %}
                                        <li><a href="{{ url('brandproduct',{'id':brand.id}) }}">{{ brand.name }}</a></li>
                                    {% endfor %}
                                </ul>
                            </li>
                            <li><a href="{{ url('contactpage') }}">Contact</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div><!--/header-bottom-->
    <section id="form"><!--form-->
        <div class="container">
            <div class="row">
                <div class="col-sm-6 center-block">
                    <div class="info-box-content"><!--sign up form-->
                        <h2>Profile</h2>
                      <label>Username</label> <div  class="form-control">{{ user.username }}</div>
                       <label>Password</label> <div class="form-control">{{ user.password }}</div>
                        <label>Fullname</label> <div class="form-control">{{ user.fullname }}</div>
                    </div>
                </div>
            </div>
        </div>
    </section><!--/form-->
{% endblock %}